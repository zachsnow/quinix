{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["ES2022"],
    "types": ["bun-types", "node"]
  },
  "include": [
    "./src/**/*.ts",
    "./bin/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
